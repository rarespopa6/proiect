#include <iostream>
#include <string>
#include <fstream>
#include <cmath>

using namespace std;

    class Artikel{
        public:
            string name;
            int nummer;
            string Anbieter;
            string rezeptpflichtig;
            string drog_chemikalie;
    };
    class AbdaArtikel: public Artikel{
        public:
            string WarrenGruppe;
            string IndikationsGruppe;
    };
    class EigeneArtikel: public Artikel{
    };
    class Rezeptur: public Artikel{
        public:
            string StoffListe;
            int menge;
            string typ[3] = {"Pasten", "Pillen", "Pulver"};
    };
    class Partei{
        public:
            string name;
            string strasse;
            string ort;
            string platz;
    };
    class Firma{
        public:
            int nummer;
            string bankkontnummer;
    };
    class Anbieter: public Firma{
        public:
            string kontaktName;
            int firmanummer;
    };
    class Person: public Partei{
        public:
            string vorname;
    };
    class Arzt: public Partei, public Firma{
        public:
            int lizenznummer;
    };

int main()
{
    ifstream ArtikelFile("artikel.txt");
    Artikel myArtikel;
    ArtikelFile >> myArtikel.name;
    ArtikelFile >> myArtikel.nummer;
    ArtikelFile >> myArtikel.Anbieter;
    ArtikelFile >> myArtikel.rezeptpflichtig;
    ArtikelFile >> myArtikel.drog_chemikalie;
    cout << "Artikel: " << "\n";
    cout << "Name: " << myArtikel.name << "\n";
    cout << "Nummer: " << myArtikel.nummer << "\n";
    cout << "Anbieter: " << myArtikel.Anbieter << "\n";
    cout << "Rezeptpflichtig(Ja/Nein): " << myArtikel.rezeptpflichtig << "\n";
    cout << "Drog Chemikalie(Ja/Nein): " << myArtikel.drog_chemikalie << "\n";
    cout << "\n";

    ifstream AbdaArtikelFile("abdaartikel.txt");
    AbdaArtikel myAbdaArtikel;
    AbdaArtikelFile >> myAbdaArtikel.WarrenGruppe;
    AbdaArtikelFile >> myAbdaArtikel.IndikationsGruppe;
    cout << "AbdaArtikel: " << "\n";
    cout << "Warrengruppe: " << myAbdaArtikel.WarrenGruppe << "\n";
    cout << "Indikationsgruppe: " << myAbdaArtikel.IndikationsGruppe << "\n";
    cout << endl;

    ifstream RezepturFile("rezeptur.txt");
    Rezeptur myRezeptur;
    RezepturFile >> myRezeptur.StoffListe;
    RezepturFile >> myRezeptur.menge;
    cout << "Rezeptur: " << "\n";
    cout << "Stoffliste: " << myRezeptur.StoffListe << "\n";
    cout << "Menge: " << myRezeptur.menge << "\n";
    cout << "Typ: " << myRezeptur.typ << "\n";
    cout << "\n";

    ifstream ParteiFile("partei.txt");
    Partei myPartei;
    ParteiFile >> myPartei.name;
    ParteiFile >> myPartei.strasse; ///getline(ParteiFile, myPartei.strasse);
    ParteiFile >> myPartei.ort;
    ParteiFile >> myPartei.platz;
    cout << "Partei: " << "\n";
    cout << "Name: " << myPartei.name << "\n";
    cout << "Strasse: " << myPartei.strasse << "\n";
    cout << "Ort: " << myPartei.ort << "\n";
    cout << "Platz: " << myPartei.platz << "\n";
    cout << endl;

    ifstream FirmaFile("firma.txt");
    Firma myFirma;
    FirmaFile >> myFirma.nummer;
    FirmaFile >> myFirma.bankkontnummer;
    cout << "Firma: " << "\n";
    cout << "Nummer: " << myFirma.nummer << "\n";
    cout << "Bankkontnummer: " << myFirma.bankkontnummer << "\n";
    cout << "\n";

    ifstream AnbieterFile("anbieter.txt");
    Anbieter myAnbieter;
    getline(AnbieterFile, myAnbieter.kontaktName);
    AnbieterFile >> myAnbieter.firmanummer;
    cout << "Anbieter: " << "\n";
    cout << "Kontaktname: " << myAnbieter.kontaktName << "\n";
    cout << "Firmanummer: " << myAnbieter.firmanummer << "\n";
    cout << "\n";

    ifstream PersonFile("person.txt");
    Person myPerson;
    PersonFile >> myPerson.vorname;
    cout << "Person: " << "\n";
    cout << "Vorname: " << myPerson.vorname << "\n";
    cout << "\n";

    ifstream ArztFile("arzt.txt");
    Arzt myArzt;
    ArztFile >> myArzt.lizenznummer;
    cout << "Arzt: " << "\n";
    cout << "Lizenznummer: " << myArzt.lizenznummer;
    cout << "\n";

    return 0;
}
